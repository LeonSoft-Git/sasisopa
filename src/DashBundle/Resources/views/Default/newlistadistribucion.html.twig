{% extends('@Dash/layout.html.twig') %}

{% block body %}
	
    <div class="col-lg-12">


        {{ form_start(form,  {'action':path('newlddsa')}) }}
            <div class="row">
                <div class="col-lg-2">
                    <label for="clave">Clave</label>
                    {{ form_widget(form.clave, {'attr': {'class': 'form-control counted' } }) }}
                    {% if form.clave.vars.errors|length > 0 %}
                        <p class="help-block">
                            {% for error in form.clave.vars.errors %}
                                {{ error.message }} <br/>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>
                <div class="col-lg-2">
                    <label for="clave">Nombre del documento</label>
                    {{ form_widget(form.nombre_documento, {'attr': {'class': 'form-control counted' } }) }}
                    {% if form.nombre_documento.vars.errors|length > 0 %}
                        <p class="help-block">
                            {% for error in form.nombre_documento.vars.errors %}
                                {{ error.message }} <br/>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>
                <div class="col-lg-2">
                    <label for="clave">No. Revisión</label>
                    {{ form_widget(form.no_revision, {'attr': {'class': 'form-control counted' } }) }}
                    {% if form.no_revision.vars.errors|length > 0 %}
                        <p class="help-block">
                            {% for error in form.no_revision.vars.errors %}
                                {{ error.message }} <br/>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>
                <div class="col-lg-2">
                    <label for="clave">No. Copia</label>
                    {{ form_widget(form.no_copia, {'attr': {'class': 'form-control counted' } }) }}
                    {% if form.no_copia.vars.errors|length > 0 %}
                        <p class="help-block">
                            {% for error in form.no_copia.vars.errors %}
                                {{ error.message }} <br/>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>

                <div class="date col-lg-2">

                    <label>Ultima fecha</label>
                    {{ form_widget(form.fecha_ultima, {'attr': {'class': 'form-control date'}}) }}


                </div>
                <div class="date col-lg-2">

                    <label>Procesos/Áreas</label>
                    {{ form_widget(form.procesos_areas) }}
                    {% if form.procesos_areas.vars.errors|length > 0 %}
                        <p class="help-block">
                            {% for error in form.procesos_areas.vars.errors %}
                                {{ error.message }} <br/>
                            {% endfor %}
                        </p>
                    {% endif %}
                </div>

            </div>

            <div class="row">
                <div class="col-lg-12">
                    {{ form_widget(form.ingresar,{'attr': {'class': 'btn btn-default btn-cons m-t-10'}}) }}

                </div>
            </div>

        {{ form_end(form) }}
    </div>

{% endblock %}