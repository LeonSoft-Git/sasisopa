{% extends('@Dash/layout.html.twig') %}

{% block body %}
    <div class="col-lg-12">

        <h2>Nuevo reporte de mantenimiento.</h2>
        <hr>
        {{ form_start(edit_form) }}
            <div class="row">
                <div class="col-lg-6">
                    <label for="nombre">Nombre de la estación:</label>
                    <fieldset disabled>{{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control counted' } }) }}</fieldset>

                </div>
                <div class="col-lg-6">
                    <label for="nombre">No. Estación:</label>
                    <fieldset disabled>{{ form_widget(edit_form.noEstacion, {'attr': {'class': 'form-control counted' } }) }}</fieldset>

                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <label for="departamento">Dirección:</label>
                    <fieldset disabled>{{ form_widget(edit_form.direccion, {'attr': {'class': 'form-control counted' } }) }}</fieldset>

                </div>

            </div>
            <div class="row">
                <div class="col-lg-6">
                    <label for="servicio">Fecha realización</label>
                    <fieldset disabled>{{ form_widget(edit_form.fechaRealizacion, {'attr': {'class': 'form-control counted' } }) }}</fieldset>

                </div>
                <div class="col-lg-6 text-center">

                        <label>Horario Programado </label>
                    <div class="row">
                        <div class="col-lg-6">
                            <fieldset disabled>{{ form_widget(edit_form.horarioInicio, {'attr': {'class': 'form-control time' } }) }}</fieldset>


                            <label for="servicio">Inicio</label>
                        </div>

                        <div class="col-lg-6">
                            <fieldset disabled>
                                {{ form_widget(edit_form.horarioTermino, {'attr': {'class': 'form-control time' } }) }}
                            </fieldset>
                            <label for="servicio">Termino</label>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-6">
                    <label for="mantenimento">MANTENIMIENTO:</label>
                </div>
                <div class="col-lg-6 text-center">
                    <div class="form-check form-check-inline">
                        {{ form_label(edit_form.mantenimientoInt) }}
                        <fieldset disabled>{{ form_widget(edit_form.mantenimientoInt) }}</fieldset>
                    </div>
                    <div class="form-check form-check-inline">
                        {{ form_label(edit_form.mantenimientoExt) }}
                        <fieldset disabled>{{ form_widget(edit_form.mantenimientoExt) }}</fieldset>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-6">
                    <label for="mantenimento">TIPO DE MANTENIMIENTO:</label>

                </div>
                <div class="col-lg-6 text-center">
                    <div class="form-check form-check-inline">
                        {{ form_label(edit_form.tipoPrev) }}
                        <fieldset disabled>{{ form_widget(edit_form.tipoPrev) }}</fieldset>
                    </div>
                    <div class="form-check form-check-inline">
                        {{ form_label(edit_form.tipoCorrectivo) }}
                        <fieldset disabled>{{ form_widget(edit_form.tipoCorrectivo) }}</fieldset>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <label for="area">Área</label>
                    <fieldset disabled>{{ form_widget(edit_form.area, {'attr': {'class': 'form-control time' } }) }}</fieldset>

                </div>
                <div class="col-lg-6">
                    <label for="area">Nombre del equipo</label>
                    <fieldset disabled>{{ form_widget(edit_form.nombreEquipo, {'attr': {'class': 'form-control time' } }) }}</fieldset>

                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3 for="trabajo">Trabajo solicitado</h3>
                    <fieldset disabled>{{ form_widget(edit_form.trabajoSolicitado, {'attr': {'class': 'form-control time' } }) }}</fieldset>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3 for="objetivo">Objetivo</h3>
                    <fieldset disabled>{{ form_widget(edit_form.objetivo, {'attr': {'class': 'form-control time' } }) }}</fieldset>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3 for="alcance">Alcance</h3>
                    <fieldset disabled>{{ form_widget(edit_form.alcance, {'attr': {'class': 'form-control time' } }) }}</fieldset>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3 for="trabajo">Trabajo realizado</h3>
                    <fieldset disabled>{{ form_widget(edit_form.trabajoRealizado, {'attr': {'class': 'form-control time' } }) }}</fieldset>
                </div>
            </div>
            <div class="col-lg-12">

                <fieldset disabled>{{ form_widget(edit_form.ingresar,{'attr': {'class': 'btn btn-default btn-cons m-t-10'}}) }}</fieldset>
                <a class="btn btn-default btn-cons m-t-10" href="{{ path('rm') }}">Regresar</a>
            </div>
        {{ form_end(edit_form) }}
        </div>


{% endblock %}