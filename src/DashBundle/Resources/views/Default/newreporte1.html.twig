{% extends('@Dash/layout.html.twig') %}

{% block body %}


<div class="col-lg-12">
<h2>Datos del observador</h2>

    {{ form_start(form,  {'action':path('newrepo')}) }}

    <div class="form-group">
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'} }) }}
        {% if form.nombre.vars.errors|length > 0 %}
            <p class="help-block">
                {% for error in form.nombre.vars.errors %}
                    {{ error.message }} <br/>
                {% endfor %}
            </p>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.titulo) }}
        {{ form_widget(form.titulo, {'attr': {'class': 'form-control'} }) }}
        {% if form.titulo.vars.errors|length > 0 %}
            <p class="help-block">
                {% for error in form.titulo.vars.errors %}
                    {{ error.message }} <br/>
                {% endfor %}
            </p>
        {% endif %}
    </div>
    <div class="form-group ">
        {{ form_label(form.turno) }}
        {{ form_widget(form.turno, {'attr': {'class': 'form-control-sm' } }) }}
    </div>
    <div class="input-group date">
        {{ form_label(form.fecha) }}
        {{ form_widget(form.fecha) }}

    </div>
    <div class="form-group">
        {{ form_label(form.hora) }}
        {{ form_widget(form.hora) }}

    </div>
    <div class="form-group">
        {{ form_label(form.observacion) }}
        {{ form_widget(form.observacion, {'attr': {'class': 'form-control counted' } }) }}
        {% if form.observacion.vars.errors|length > 0 %}
            <p class="help-block">
                {% for error in form.observacion.vars.errors %}
                    {{ error.message }} <br/>
                {% endfor %}
            </p>
        {% endif %}

    </div>
    <div class="form-check form-check-inline">
        {{ form_label(form.colaborador) }}
        {{ form_widget(form.colaborador) }}

    </div>
    <div class="form-check form-check-inline">

        {{ form_label(form.contratista) }}
        {{ form_widget(form.contratista) }}

    </div>
    <div class="form-check form-check-inline">

        {{ form_label(form.visitante) }}
        {{ form_widget(form.visitante) }}

    </div>
    <div class="form-check form-check-inline">

        {{ form_label(form.planeada) }}
        {{ form_widget(form.planeada) }}

    </div>
    <div class="form-check form-check-inline">

        {{ form_label(form.espontanea) }}
        {{ form_widget(form.espontanea) }}

    </div>
    <hr>
    <h2>Identificac√≥n del hallazgo</h2>

    <div class="">
        {{ form_widget(form.ingresar, {'attr': {'class ': 'btn btn-primary'} }) }}
    </div>

    {{ form_end(form) }}





</div>





{% endblock %}
