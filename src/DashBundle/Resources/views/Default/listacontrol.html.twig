{% extends('@Dash/layout.html.twig') %}

{% block body %}
	
    <div class="col-lg-12">
        {% if app.user.level.idl == 1 or app.user.level.idl == 2 %}
            <a class="btn btn-default btn-cons m-t-10" href="{{ path('newlcd') }}"><i class="fa fa-plus"></i> Insertar</a>
        {% endif %}
        <div class="table-responsive" >
            <table class="table" cellpadding="0" cellspacing="0">

                <tr align="center" >
                    <td>No.</td>
                    <td>Clave</td>
                    <td>No. Revisión</td>
                    <td>Fecha última de revisión</td>
                    <td>Nombre del registro</td>
                    <td>Responsable de recolección y resguardo</td>
                    <td>Ubicación</td>
                    <td>Archivo (Tiempo Años)</td>
                    <td>Destrucción</td>
                    <td>Papel</td>
                    <td>Electrónico</td>
                    <td>Observaciones</td>
                </tr>

                <tr align="center">
                    {% for list in listac %}
                    <td>{{ list.idlc }}</td>
                    <td>{{ list.clave }}</td>
                    <td>{{ list.noRevision }}</td>
                    <td>{{ list.fechaUltima|date }}</td>
                    <td>{{ list.nombreRegistro }}</td>
                    <td>{{ list.responsable }}</td>
                    <td>{{ list.ubicacion }}</td>
                    <td>{{ list.archivoTiempo }}</td>
                    {% if list.destruccion == 1 %}
                        <td><i class="fa fa-check"> </i></td>
                    {% else %}
                        <td></td>
                    {% endif %}
                    {% if list.papel == 1 %}
                        <td><i class="fa fa-check"> </i></td>
                    {% else %}
                        <td></td>
                    {% endif %}
                    {% if list.electronico == 1 %}
                        <td><i class="fa fa-check"> </i></td>
                    {% else %}
                        <td></td>
                    {% endif %}
                    <td>{{ list.observaciones }}</td>
                    {% endfor %}
                </tr>




            </table>



        </div>


    </div>

{% endblock %}