{% block title %}{% if id==1 %}Política I{% elseif id==2 %}Legales{% elseif id==3 %}Manual{% endif %} | {{ parent() }}{% endblock %}

{% block body %}
	{% if id==1 %}
		<embed src="{{asset('assets/documentos/MANUAL SASISOPA.pdf')}}" width="1050" height="650">
	{% elseif id==2 %}
		<embed src="{{asset('assets/documentos/Identificación-y-Evaluación.pdf')}}" width="1050" height="650">
    {% elseif id==3 %}
		<embed src="{{asset('assets/documentos/Gestión-de-Objetivos-y-Metas.pdf')}}" width="1050" height="650">
    {% elseif id==4 %}
		<embed src="{{asset('assets/documentos/CARTAPODER.pdf')}}" width="1050" height="650">

		<a class="btn btn-primary btn-cons m-t-10" href="{{ path('newfile') }}">Adjuntar Carta</a>
