{% extends('@Dash/layout.html.twig') %}

{% block body %}

    <div class="col-lg-12">
        <h2>Listado de equipos nuevos</h2>
        {% if app.user.level.idl == 1 or app.user.level.idl == 2 %}
            <a class="btn btn-default btn-cons m-t-10" href="{{ path('newlven') }}" role="button"><i class="fa fa-plus"> Insertar</i> </a>
        {% endif %}
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered" border="2">

                        <tr align="center">
                            <td>No. Id</td>
                            <td>Nombre de estacion</td>
                            <td>link</td>


                        </tr>
                        {% for eq in eqnu %}
                        <tr align="center">
                                <td>{{ eq.idlen }}</td>
                                <td>{{ eq.nombreEstacion }}</td>
                                <td><a href="{{ path('lvesc', {'id': eq.idlen}) }}" data-toggle="tooltip" title="Ver"> Ver Reporte {{ eq.idlen }} <i class="fa fa-eye"></i></a></td>
                        </tr>
                        {% endfor %}


                    </table>



                </div>


            </div>
        </div>
    </div>
{% endblock %}