                    {{ form_widget(edit_form.marca, {'attr': {'class': 'form-control counted' } }) }}
                    <label for="revision">Fabricante</label>
                    {{ form_widget(edit_form.fabricante, {'attr': {'class': 'form-control counted' } }) }}
                    <label for="revision">Crítico</label>
                    {{ form_widget(edit_form.critico, {'attr': {'class': 'form-control counted' } }) }}
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset disabled>
                <label for="revision">No. Estación</label>
                {{ form_widget(edit_form.no_estacion, {'attr': {'class': 'form-control counted' } }) }}
                <label for="revision">Fecha de llenado</label>
                {{ form_widget(edit_form.fecha_llenado, {'attr': {'class': 'form-control date' } }) }}
