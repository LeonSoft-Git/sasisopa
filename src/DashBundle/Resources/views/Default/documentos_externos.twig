{% extends('@Dash/layout.html.twig') %}

{% block body %}
    <div class="col-lg-12">
        {% if app.user.level.idl == 1 or app.user.level.idl == 2 %}
            <a class="btn btn-default btn-cons m-t-10" href="{{ path('newcde') }}">Insertar</a>
        {% endif %}
	<div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table">
                    <tr align="center">
                        <td>No.</td>
                        <td>Nombre del documento</td>
                        <td>Fecha última de revisión y/o actualización</td>
                        <td>Frecuencia de revisión</td>
                    </tr>
                    {% for doc in documentose %}
                    <tr align="center">

                            <td>{{ doc.idde }}</td>
                            <td>{{ doc.nombredocumento }}</td>
                            <td>{{ doc.fechaultima|date("m/d/Y") }}</td>
                            {% if app.user.level.idl == 1 or app.user.level.idl == 2 %}
                                <td><i class="fa fa-plus"></i></td>
                            {% else %}
                                {% for rev in revisiones %}
                                    <td>{{ rev.fecha }}</td>
                                {% endfor %}
                            {% endif %}
                    </tr>
                    {% endfor %}
                </table>

            </div>
        </div>
    </div>
    </div>
{% endblock %}