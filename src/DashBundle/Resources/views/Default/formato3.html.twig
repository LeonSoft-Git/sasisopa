{% extends('@Dash/layout.html.twig') %}

{% block title %}Requerimientos Legales | {{ parent() }}{% endblock %}

{% block stylesheets %}
	<link href="{{ asset('assets/plugins/datatables-responsive/css/datatables.responsive.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/plugins/datatables-responsive/js/datatables.responsive.js')}}" type="text/javascript"></script>
{% endblock %}

{% block body %}

<div class="container-fluid padding-25 sm-padding-10">	
	<div class="card card-transparent">
		<div class="card-header ">
			<div class="card-title">Requerimientos Legales
			</div>
			<div class="tools">
				<a class="collapse" href="javascript:;"></a>
				<a class="config" data-toggle="modal" href="#grid-config"></a>
				<a class="reload" href="javascript:;"></a>
				<a class="remove" href="javascript:;"></a>
			</div>
		</div>
			<div class="card-block">
			<div class="table-responsive" style="overflow-x: scroll;">
			<table class="table table-hover" id="condensedTable" >
				<thead>
					<tr>
						<th style="width:auto">Dependencia</th>
						<th style="width:30%">Clasificación</th>
						<th style="width:40%">Codificación</th>
                        <th style="width:40%">Título</th>
                        <th style="width:40%">Año de Emisión</th>
                        <th style="width: 200px;">Patrón</th>
                        <th style="width:40%">Trabajadores</th>
                        <th style="width:40%">Generales</th>
                        <th style="width:40%">Disposiciones Específicas</th>
                        <th style="width:40%">Artículos Aplicables</th>
                        <th style="width:40%">Descripción</th>
                        <th style="width:40%">Enlace</th>
					</tr>
				</thead>
			<tbody>
            {% for requisito in data %}
                <tr>
                    <td class="v-align-middle semi-bold">{{ requisito.dependencia }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.clasificacion }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.codificiacion }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.titulo }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.anoEmision }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.patron }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.trabajadores }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.generales }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.disposicionesEspecificas }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.articulosAplicables }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.descripcionRequisito }}</td>
					<td class="v-align-middle semi-bold">{{ requisito.link }}</td>
                </tr>
            {% endfor %}
			</tbody>
			</table>
			</div>
		</div>
</div>
</div>


{% endblock %}